<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">

    <context:property-placeholder location="classpath*:parameter.properties"/>


    <!-- 占座服务 -->
    <bean id="orderSeatServiceProcessor" class="com.orderseat.service.facade.OrderSeatServiceImpl"/>
    <bean id="orderSeatServiceConfig" class="com.meituan.dorado.config.service.ServiceConfig">
        <property name="serviceInterface" value="com.orderseat.facade.OrderSeatService"/>
        <property name="serviceImpl" ref="orderSeatServiceProcessor"/>
    </bean>

    <!-- 座位查询服务 -->
    <bean id="seatInfoServiceProcessor" class="com.orderseat.service.facade.SeatInfoServiceImpl"/>
    <bean id="systemInfoServiceConfig" class="com.meituan.dorado.config.service.ServiceConfig">
        <property name="serviceInterface" value="com.orderseat.facade.OrderSeatService"/>  <!-- 服务接口 -->
        <property name="serviceImpl" ref="seatInfoServiceProcessor"/>                      <!-- 服务实现类 -->
    </bean>

    <!-- 服务发布 -->
    <bean id="orderSeatPublisher" class="com.meituan.dorado.config.service.spring.ServiceBean" destroy-method="destroy">
        <property name="appkey" value="com.meituan.octo.dorado.server"/>      <!-- 服务appkey -->
        <property name="port" value="9001"/>                                  <!-- 服务端口号 -->
        <property name="registry" value="zookeeper://${zk.address}"/>         <!-- 服务注册 地址 -->
        <!--<property name="serviceConfig" ref="helloServiceConfig"/>   &lt;!&ndash; 服务接口配置 &ndash;&gt;-->
        <property name="serviceConfigList"> <!-- 单端口多服务 -->
            <list>
                <ref bean="orderSeatServiceConfig" />
                <ref bean="systemInfoServiceConfig" />
            </list>
        </property>
    </bean>
</beans>
